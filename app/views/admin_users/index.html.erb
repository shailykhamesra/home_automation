<style type="text/css">
  html{ 
    background: url("../../backdrop.png");
    opacity: 1; 
    margin:0; padding:10%; height:100%; 
  }
</style>

<div  margin="20px">
<br>
<h1 align="center">Admin Users</h1>

<table align="center">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.first_name %></td>
        <td><%= admin_user.last_name %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.username %></td>
        <td><%= link_to 'Show', admin_user %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(admin_user) %></td>
        <td><%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div align="center">
  <%= link_to 'New Admin User', new_admin_user_path %>
</div>
<br>
</div>