<h1 align='center'>Automatic Control</h1>

<h2 align='center'><%= link_to 'Create a new connection', new_control_path %></h2>

<table valign='middle' align='center'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pin</th>
      <th>Turn ON Time</th>
      <th>Turn OFF Time</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @controls.each do |control| %>
      <tr>
        <td><%= control.name %></td>
        <td><%= control.pin %></td>
        <td><%= control.configure.strftime("at %I:%M%p") %></td>
        <td><%= control.configureoff.strftime("at %I:%M%p") %></td>
        <td><%= link_to 'Show', control %></td>
        <td><%= link_to 'Edit', edit_control_path(control) %></td>
        <td><%= link_to 'Destroy', control, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
