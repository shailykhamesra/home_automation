<div class="login">
  <div class="inner">
    <%= form_tag(login_attempt_login_path, :method => :post) do %>
    <table>
      <tr>
        <td><%= text_field_tag(:username, params[:username], placeholder: "Username")%></td>
      </tr>
      <tr>
        <td><%= password_field_tag(:password, "", placeholder: "Password")%></td>
      </tr>
      <tr>
        <td align="center"><%= submit_tag("Log In")%></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>